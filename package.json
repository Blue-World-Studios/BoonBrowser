{
  "name": "boon",
  "version": "2.0.6",
  "description": "A modern, dark-blue, resizable, fun web browser by Blue World Studio.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.blueworld.boon",
    "productName": "Boon",
    "copyright": "Â© 2025 Blue World Studio",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "extraResources": [
      "Boonimage.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "Boonimage.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Blue-World-Studios",
        "repo": "BoonBrowser",
        "author": "Blue World Studio"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.1.8"
  },
  "devDependencies": {
    "electron": "^25.3.1",
    "electron-builder": "^25.1.1"
  }
}
